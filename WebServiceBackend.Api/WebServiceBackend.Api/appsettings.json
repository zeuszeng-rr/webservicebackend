{

  "Cors": {
    "AllowedOrigins": [
      "https://localhost:4200",
      "https://localhost:7284"
    ]
  },
  "Jwt": {
    "SecretKey": "your-very-secret-key",
    "Issuer": "YourAppIssuer",
    "Audience": "YourAppAudience",
    "ExpirationInMinutes": 60,
    "AutoRenew": true
  },
  "Hangfire": {
    "EnableHangfire": false,
    "Database": "SQL Server",
    "EnableDashboard": true
  },
  "ConnectionStrings": {
    "DatabaseProvider": "SqlServer", // หรือ "Postgres"
    "DefaultConnection": "Server=localhost;Database=AppDb;Trusted_Connection=True;",
    "HangfireConnection": "Server=localhost;Database=HangfireDb;Trusted_Connection=True;",
    "PostgresConnection": "Host=localhost;Port=5432;Database=AppDb;Username=yourusername;Password=yourpassword"
  },
  "AppSettings": {
    "TimeZoneId": "SE Asia Standard Time",
    "IncludePaths": [
      "/api/user/login",
      "/api/user/register"
    ],
    "LoggingOptions": {
      "WriteToFile": true,
      "WriteToDatabase": false,
      "LogFilePath": "Logs/log.txt"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AuditTrail": {
    "Enabled": true,
    "ExcludeTables": [
      "MstMenu",
      "MstUserRole",
      "MstDepartment"
    ]
  },
  "Encryption": {
    "Key": "32-character-key........",
    "IV": "16-character-iv"
  },
  "AllowedHosts": "*"
}
